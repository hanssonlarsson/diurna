<article>
  <header>
    <h1><%= @title %></h1>
    <time datetime="<%= @formatDate @ctime, "isoUtcDateTime" %>" pubdate><%= @humanDate @ctime %></time>
  </header>
  <%- @body %>
</article>
<aside class="nav"><nav class="sub">
  <% if @siblings.length: %><ul><% for sibling in @siblings: %><li><a href="/<%= sibling.path %>"><%= sibling.title %></a></li><% end %></ul><% end %>
</nav></aside>
