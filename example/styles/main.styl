@import "rules"
@import "base"
@import "skeleton"

/* #Site Styles
================================================== */

// Sticky footer, http://www.lwis.net/journal/2008/02/08/pure-css-sticky-footer/
html, body
  height 100%

#content
  height 55%

body > #content
  height auto
  min-height 55%

#main-footer
  position relative
  z-index 10
  height 9em
  margin-top -9em
  padding-top 3em

#content
  padding-bottom 9em
// End sticky footer

body.progress
  cursor progress

#main-header, #content, #main-footer
  container()

#main-header
  padding-top 1.5em
  margin-bottom 1.5em
  h1
    margin-bottom 0
  h2
    font-size 1.33em
    color #777
    font-style italic
  hgroup, nav
    text-align center
  nav li
    display inline-block
    margin-right .5em
    body.rtl &
      margin-right 0
      margin-left .5em

#main-footer
  margin-bottom 1.5em

  aside
    columns(one-third)

    h5
      color #aaa
      font-family sans_serif_font
      margin-bottom 1.2em
    h6
      font-family sans_serif_font
      font-weight bold

a.feed
  background transparent url(icons/feed.png) no-repeat left center
  padding-left 20px

header a
  text-decoration none
  &:hover
    text-decoration underline

nav li
  a
    text-decoration none
    &:hover
      text-decoration underline
  &.current
    a
      color turquoise

#posts, #content > article.post
  columns(12)
  body.rtl &
    float left

article.post
  #posts &
    margin-bottom 4.5em
    header
      margin-bottom 1.5em
      h1
        font-size 2.67em
        line-height 1.125em
  header
    clearfix()
    margin-bottom 3em
    h1
      margin-bottom 0
    time
      color #aaa
      font-family serif_font
      font-style italic
      font-size 0.75em
      line-height 2em

aside.nav
  columns(4)
  text-align right
  body.rtl &
    float right
    text-align left

article.post img, img.inline
  float left
  margin-right 1.5em
  margin-bottom 1.5em
  body.rtl &
    float right
    margin-right 0
    margin-left 0.5em

/* #Page Styles
================================================== */

/* #Media Queries
================================================== */

/* Smaller than standard 960 (devices and browsers) */
@media only screen and (max-width: 959px) {}

/* Tablet Portrait size to standard 960 (devices and browsers) */
@media only screen and (min-width: 768px) and (max-width: 959px) {}

/* All Mobile Sizes (devices and browser) */
@media only screen and (max-width: 767px) {}

/* Mobile Landscape Size to Tablet Portrait (devices and browsers) */
@media only screen and (min-width: 480px) and (max-width: 767px) {}

/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px) {}
